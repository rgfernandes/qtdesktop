TEMPLATE = app
TARGET = qrdc
target.path = /usr/bin
DEPENDPATH += . translations
INCLUDEPATH += src
HEADERS += src/qrdc.h
SOURCES += src/main.cpp src/qrdc.cpp
TRANSLATIONS += translations/qrdc_ru.ts
trans.path = $$[QT_INSTALL_TRANSLATIONS]
trans.files = translations/qrdc_*.qm
isEmpty(trans.path) {
	trans.path = $(QTDIR)/translations
}
QT += core gui
INSTALLS += target trans
CONFIG += warn_on
VERSION = 0.0.1
